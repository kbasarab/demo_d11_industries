{#
/**
 * @file
 * Theme override to display a program node in card view mode.
 */
#}
<div class="card h-100">
  {% if content.field_hero_image|render %}
    <div class="card-img-top">
      {{ content.field_hero_image }}
    </div>
  {% else %}
    <div class="card-img-top bg-primary text-white d-flex align-items-center justify-content-center" style="height: 200px;">
      <div class="text-center">
        <i class="fas fa-graduation-cap fa-2x mb-2"></i>
        <div class="fw-bold">{{ label }}</div>
      </div>
    </div>
  {% endif %}
  <div class="card-body d-flex flex-column">
    <h5 class="card-title">{{ label }}</h5>
    <div class="card-text flex-grow-1">
      {{ content.body }}
    </div>
    <div class="mt-auto">
      <a href="{{ url }}" class="btn btn-primary">Learn More</a>
    </div>
  </div>
</div>
