{#
/**
 * @file
 * Theme override to display a news node in card view mode.
 */
#}
<div class="card h-100">
  {% if content.field_hero_image|render %}
    <div class="card-img-top">
      {{ content.field_hero_image }}
    </div>
  {% endif %}
  <div class="card-body d-flex flex-column">
    <h5 class="card-title">{{ label }}</h5>
    <small class="text-muted mb-2">{{ node.createdtime|date('F j, Y') }}</small>
    <div class="card-text flex-grow-1">
      {{ content.body }}
    </div>
    <div class="mt-auto">
      <a href="{{ url }}" class="btn btn-outline-primary">Read More</a>
    </div>
  </div>
</div>
